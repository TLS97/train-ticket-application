<% layout('layouts/boilerplate') %>

    <div class="container mt-5 mb-5">
        <div class="row justify-content-center">
            <div class="col-xl-6 col-lg-6 col-md-8 col-sm-12">
                <h3 class="card-title mb-4">Available Routes</h3>
                <% for (let i=0; maxi=routes.length, i < maxi; i++) { %>
                    <div class="card shadow mb-3">
                        <div class="card-body">
                            <h5 class="card-title">
                                From <%= routes[i].from %> to <%= routes[i].to %>
                            </h5>
                            <p class="card-text">Date: <%= routes[i].route.stations[0].departureTime.toString() %>
                            </p>
                            <div>
                                <p>
                                    <strong>Price: 249NOK</strong>
                                </p>
                            </div>
                            <form action="/<%= id %>/tickets/new/showroutes/<%= routes[0]._id %>" method="POST">
                                <button class="btn btn-dark shadow" type="submit">Purchase a Ticket</button>
                            </form>
                        </div>
                    </div>
                    <% } %>


                        <a href="/<%= id %>/tickets/new">Go Back</a>
            </div>

        </div>
    </div>